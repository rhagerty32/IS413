@model IEnumerable<mission06_Hagerty.Models.Movie>

@{
    ViewData["Title"] = "Movie Collection";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">üé¨ Movie Collection</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add New Movie</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover border shadow-sm">
            <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Director</th>
                <th>Year</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Copied To Plex</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@(movie.Category != null ? movie.Category.CategoryName : "Unknown")</td>
                    <td>@movie.Director</td>
                    <td>@movie.Year</td>
                    <td>@movie.Rating</td>
                    <td>
                        @if (movie.Edited != null)
                        {
                            <span class="badge @(movie.Edited.Value ? "bg-success" : "bg-secondary")">
                                @(movie.Edited.Value ? "Yes" : "No")
                            </span>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>@(string.IsNullOrEmpty(movie.LentTo) ? "‚Äî" : movie.LentTo)</td>
                    <td>
                        @if (movie.CopiedToPlex != null)
                        {
                            <span class="fs-5">
                                @(movie.CopiedToPlex.Value ? "‚úÖ" : "‚ùå")
                            </span>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>@(string.IsNullOrEmpty(movie.Notes) ? "‚Äî" : movie.Notes)</td>
                    <td style="display: flex; flex-direction: row; gap: 10px">
                        <a href="@Url.Action("Edit", "Movies", new { id = movie.MovieId })" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "Movies", new { id = movie.MovieId })" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>